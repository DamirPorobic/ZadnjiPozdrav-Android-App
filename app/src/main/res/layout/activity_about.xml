<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="info.zadnjipozdrav.zadnjipozdrav.AboutActivity">

    <ImageView
        android:id="@+id/about_logo"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/nle_it_logo" />

    <TextView
        android:id="@+id/about_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_text"
        android:textSize="18sp"
        android:layout_margin="16dp"
        android:layout_below="@+id/about_logo" />

    <Button
        android:id="@+id/about_email_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_email_button_text"
        android:layout_below="@+id/about_text"
        android:layout_centerHorizontal="true"
        android:onClick="onSendEmail"/>
</RelativeLayout>
